{% extends "_layouts/site" %}

{% block content %}

    <section class="news blue pt-lg-5 pb-lg-3 pt-sm-4 pb-sm-2 mb-5">
        <div class="container">
            <div class="row ">
                <div class="col-md-10">
                    <div class="page-heading"><h1>Our members</h1></div>
                </div>

            </div>
        </div>
    </section>
    <!-- Page Content -->
    <section class="page">
        <div class="container">

            {#<div class="row ">#}


            {#<div class="col-lg-12 mb-3">#}
            {#<h1>{{ entry.title }}</h1>#}
            {#</div>#}
            {#</div>#}

            {% set lazyImage = false %}
            {% set blockPrefix = "" %}
            <div class="row ">
                <div class="col-xs-12 col-md-12 col-lg-7 col-xl-7">
                    <h1>{{ entry.title }}</h1>

                    {% if entry.memberLogo| length %}
                        {% set image = entry.memberLogo[0] ?? null %}
                        <img class=" mt-3 mb-5"  src="{{ image.getUrl('pdfTransform') }}" width="{{ image.getWidth('pdfTransform') }}" height="{{ image.getHeight('pdfTransform') }}" alt="{{ image.title ? image.title : entry.title }} {{ image.imageCredit ? image.imageCredit: ''  }}">
                    {% endif %}

                    {% if entry.memberProfileIntro| length %}

                            <p>{{ entry.memberProfileIntro }}</p>

                            {% if entry.memberProfileExtended| length %}
                                {{ entry.memberProfileExtended }}
                            {% endif %}

                        {% if entry.websiteLink | length %}
                            <p><a href="{{ entry.websiteLink }}" target="_blank">Visit {{ entry.title }} at their website <i class="fa fa-external-link"></i></a></p>
                        {% endif %}

                        {% else %}

                            {% if entry.websiteLink | length %}
                               <p><a href="{{ entry.websiteLink }}" target="_blank">Visit {{ entry.title }} at their website <i class="fa fa-external-link"></i></a></p>
                            {% endif %}

                            <section class="outlink mb-4 mt-4 p-5">
                            <div class="rejoin-cta">{{ membersCTA.rejoinMessage }}

                            <p>
                                <a class="btn btn-primary" href="{{ membersCTA.rejoinLink.one().url }}">{{ membersCTA.rejoinLink.one().title }}</a>
                            </p>
                            </div>
                            </section>

                    {% endif %}


                </div>
                <div class="col-xs-12 col-md-12 col-lg-4 offset-lg-1 col-xl-4 offset-xl-1">
                    <div class="side-box">
                        <h3>About</h3>
                        <ul class="list-unstyled">
                            {% import '_macros' as macros %}
                            {#Get entries to build the sub-menu#}
                            {% set parent = craft.entries.id(31).one() %}
                            {% set subMenu = craft.entries.descendantOf(parent).level('2') %}

                            {#Output the sub menu#}
                            {% for entry in subMenu.all() %}
                                {#{% if entry.entryLink.first|length %}#}
                                {##}
                                {#{% else %}#}
                                {#{% set navlink = entry.customLink %}#}
                                {#{% endif %}#}
                                {% set navlink = entry.uri %}
                                <li class=" {{ macros.isActiveChildClass(entry.slug)|trim }} level{{ entry.level }}">
                                    <a href="{{ siteUrl }}{{ entry.uri }}"
                                       class="  level{{ entry.level }}">{{ entry.title }}</a>
                                </li>

                            {% endfor %}

                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </section>
    <section class="container page members">

        <div class="row mt-5">
            <div class="col-xs-12 col-md-12 col-lg-7 col-xl-7 ">

                <h4>    Members list</h4>

                {% set members = craft.entries()
                .section('members')

                .orderBy('title asc')
                .all() %}


                <div class="row ">
                    {% for entry in members %}


                        {# start card layout #}
                        <div class="col-md-4 mt-1  mb-4  ">

                            <div class="card text-center h-100 justify-content-center {% if entry.websiteLink | length %}  {% endif %}">



                                {#{% if entry.websiteLink | length %}#}

                                {%  set link = null %}
                                {%  if  "http" in entry.websiteLink %}
                                    {%  set link = entry.websiteLink %}
                                {% else %}
                                    {%  set link = "http://"~entry.websiteLink %}
                                {% endif %}

                                <a href="{{ entry.url }}" >

                                    <div class="my-auto">
                                        {% set image = entry.memberLogo[0] ?? null %}

                                        {% if image %}
                                            <div class="card-icon  ">
                                                <img class="   m-2" src="{{ image.getUrl('memberLogo') }}"
                                                     alt="{{ image.title ? image.title : entry.title }} {{ image.imageCredit ? image.imageCredit: '' }}">
                                            </div>
                                        {% else %}
                                            <div class="card-icon  ">
                                                <img class="   m-2" src="{{ baseUrl }}/images/nologo-sm.png"
                                                     alt="this member does not yet have a logo">
                                            </div>
                                        {% endif %}

                                        <div class="card-body p-0">
                                            <h5 class="card-title p-2  mb-0">
                                                {{ entry.title }}

                                            </h5>

                                        </div>
                                    </div>
                                </a>
                                {#{% if entry.websiteLink | length %} </a>{% endif %}#}
                            </div>
                        </div>
                        {# end card layout #}



                    {% endfor %}

                </div>
            </div>

            <div class="col-xs-12 col-md-12 col-lg-4 offset-lg-1 col-xl-4 offset-xl-1">
                {% include ('_includes/sidebar_nav.twig') %}
            </div>
        </div>
    </section>
{% endblock content %}