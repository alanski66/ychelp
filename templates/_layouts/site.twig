{% extends "_layouts/base.twig" %}

{% set isHomepage = entry is defined and entry.uri == "__home__" ? true : false %}


{% block body %}

    <!-- site -->
    <div class="content-wrapper {{isHomepage}}">
     {% set emergency = globalContent.showEmergencyAlert %}
            {% if emergency and isHomepage == false %}
            {% set alerts = craft.entries.section('emergencies').limit(1) %}
            <div class="emergency small text-center">
                <div class="row mb-0" >
                    <div class="m-auto p-2">
                        {% for entry in alerts %}
                        <i class="fa fa-info-circle mr-2 inline-block" aria-hidden="true"></i>  
                        <span class="alert-title inline-block"><a href="{{ entry.url }}">{{ entry.title }}</a></span>
                        <span class="date inline-block">
                            Issued : {{ entry.postDate.format('F d, Y') }}
                        </span>

                        {% endfor %}



                    </div>
                </div>
            </div>
            {% endif %}
        {% block content %}

        {% endblock %}
    </div>

{% endblock %}